@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="sortable">
    <thead>
        <tr>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.SelectedPM.Name)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.SelectedTeam.Name)
            </th>
            @*<th data-sort="date">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th data-sort="date">
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>*@
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Effort)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.DeliveryStatus)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Overview)
            </th>
            <th data-sort="name">
                @Html.DisplayNameFor(model => model.Risks)
            </th>
            <th data-sort="name"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelectedPM.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelectedTeam.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>*@
                <td id="status">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td id="priority">
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td id="effort">
                    @Html.DisplayFor(modelItem => item.Effort)
                </td>
                <td id="dstatus">
                    @Html.DisplayFor(modelItem => item.DeliveryStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Overview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Risks)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(colorizeIndex)
</script>