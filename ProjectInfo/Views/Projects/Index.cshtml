@model IEnumerable<ProjectInfo.Models.Project>
    
<link href="~/Content/filtrSort.css" rel="stylesheet"><!--dodano-->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<!-- jQuery z Google CDN -->
